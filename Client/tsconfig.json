{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./dist",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "es2017"]
    },
    "include": ["node_modules/@types/**/*.d.ts", "src/**/*"],
    "exclude": ["node_modules"]
}
